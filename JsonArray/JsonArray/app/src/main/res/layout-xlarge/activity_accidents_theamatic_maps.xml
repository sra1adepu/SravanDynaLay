<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainheader"
    android:background="@drawable/home_screen_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/rltv"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@drawable/header_bg"
        >

        <TextView
            android:id="@+id/action_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Accident Thematic Map"
            android:textColor="#fff"
            android:textSize="15dp"
            />

        <ImageView
            android:id="@+id/action_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/action_logo"
            android:paddingLeft="10dp"
            android:paddingBottom="20dp"
            android:paddingRight="10dp"
            android:src="@drawable/navigationdrawer" />
        <RelativeLayout
            android:id="@+id/badge_layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"

            android:layout_marginRight="21dp"
            android:layout_marginTop="0dp"
            android:paddingBottom="0dp"
            android:paddingTop="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"


            >

            <RelativeLayout
                android:id="@+id/relative_layout_item_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/notifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dial100notif" />
            </RelativeLayout>

            <TextView
                android:id="@+id/badge_notification_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_alignRight="@id/relative_layout_item_count2"
                android:background="@android:drawable/ic_notification_overlay"
                android:text="3"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/badge_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/badge_layout3"

            android:layout_marginRight="5dp"
            android:paddingBottom="0dp"
            android:paddingTop="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            >


            <RelativeLayout
                android:id="@+id/relative_layout_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:background="@drawable/notification" />
            </RelativeLayout>

            <TextView
                android:id="@+id/badge_notification_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignRight="@id/relative_layout_item_count"
                android:background="@android:drawable/ic_notification_overlay"

                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rltv"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:id="@+id/thematictotal">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From Date:"
                        android:fontFamily="roboto-light"
                        android:textSize="10sp"
                        android:textColor="#000"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/fromdatetext" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/calendar_icon"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/fromdateedit"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit"
                        android:drawablePadding="8dip"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="To Date:"

                        android:fontFamily="roboto-light"
                        android:layout_marginTop="6dp"
                        android:textSize="10dp"
                        android:textColor="#000"
                        android:id="@+id/todatetext"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/edit"
                        android:id="@+id/todateedit"
                        android:layout_marginTop="10dp"

                        />
                </LinearLayout>
            </TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accident Type:"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="10dp"
                    android:textColor="#000"
                    android:fontFamily="roboto-light"
                    android:id="@+id/OffenceType"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/Accedittypeedit"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner"
                    android:paddingRight="5dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type:"
                    android:textSize="10dp"
                    android:textColor="#000"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="roboto-light"
                    android:id="@+id/type" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/typeradio"
                    android:paddingTop="4dp"
                    android:layout_below="@+id/OffenceType"
                    android:layout_toRightOf="@+id/type"
                    android:layout_toEndOf="@+id/type">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Classification"
                        android:id="@+id/classificationradio"
                        android:fontFamily="roboto-light"
                        android:paddingRight="10dp"
                        android:checked="true"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/percentage"
                        android:text="Percentage"
                        android:fontFamily="roboto-light"

                        />
                </RadioGroup>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/tablerow3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Classification:"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="10dp"
                    android:textColor="#000"
                    android:fontFamily="roboto-light"
                    android:id="@+id/classification"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/classificationedit"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner"


                    android:paddingRight="5dp"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/tablerow4"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Percentage:"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="10dp"
                    android:textColor="#000"
                    android:fontFamily="roboto-light"
                    android:id="@+id/percentage1"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/classificationper"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner"


                    android:paddingRight="5dp"/>

            </TableRow>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3"

            android:orientation="horizontal">
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <Button
                android:text="Search"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:id="@+id/button2"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:background="@drawable/loginbutton"
                android:layout_marginBottom="5dp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center|right"
                android:layout_weight="0.5"
                android:src="@drawable/hide" />

        </LinearLayout>




    </LinearLayout>








<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:layout_below="@+id/linearLayout1"
    android:orientation="vertical">


    <fragment
        android:layout_weight="1.8"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.logicshore.accidents.AccidentsTheamaticMaps" >


        </fragment>

    <HorizontalScrollView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="5dp"
            android:orientation="horizontal"

            android:background="@drawable/edit"
            android:paddingRight="5dp" >
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                >


                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="6dp"

                    android:src="@drawable/classa" />

                <TextView
                        android:id="@+id/lb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="Roboto-light"
                    android:text=""

                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                >


                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/classb" />

                <TextView
                    android:id="@+id/lb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="Roboto-light"
                    android:text=""

                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                >


                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/classc" />

                <TextView
                    android:id="@+id/lb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="Roboto-light"
                    android:text=""

                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                >


                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/classd" />

                <TextView
                    android:id="@+id/lb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="Roboto-light"
                    android:text=""

                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                >


                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/classe" />

                <TextView
                    android:id="@+id/lb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="Roboto-light"
                    android:text=""

                    android:textSize="16sp"/>

            </LinearLayout>


        </LinearLayout>


    </HorizontalScrollView>
</LinearLayout>
</RelativeLayout>