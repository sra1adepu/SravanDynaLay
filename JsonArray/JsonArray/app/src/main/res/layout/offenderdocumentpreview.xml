<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFFENDER:"
        android:fontFamily="roboto-light"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/card_background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight=".7"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:text="OFFENDER DOCUMENTS:"
        android:textColor="@color/colorAccent"
        android:fontFamily="roboto-light"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textSize="16sp"
            android:gravity="top|bottom"
            android:layout_gravity="center"
            android:id="@+id/offenderdocuments"
            android:layout_weight=".5"/>
    </LinearLayout>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Proof Type"

                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:fontFamily="roboto-light"
                android:id="@+id/OffenceType"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center"

                android:layout_weight="0.2"

                android:textSize="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/prooftypepreviewtext"
                android:layout_weight="1.8"
                android:textColor="#135b97"
                android:gravity="top|bottom"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:paddingRight="5dp"
                />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Proof Value"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_weight="1"

                android:fontFamily="roboto-light"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center"

                android:layout_weight="0.2"

                android:textSize="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/proofvaluepreviewtext"
                android:layout_weight="1.8"
                android:layout_gravity="center"
                android:gravity="top|bottom"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="#135b97"
                android:paddingRight="5dp"
                />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Proof Id Attachment"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:fontFamily="roboto-light"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:textSize="20dp"
                />
            <ImageView
                android:id="@+id/image"
                android:layout_weight="1.8"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="80dp"/>
        </LinearLayout>
    </TableRow>

</LinearLayout>
</LinearLayout>