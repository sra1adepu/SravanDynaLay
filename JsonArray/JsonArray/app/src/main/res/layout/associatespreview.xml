<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFFENDER:"
        android:fontFamily="roboto-light"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASSOCIATES:"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorAccent"/>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"

                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="roboto-light"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"

                    android:layout_weight="0.2"

                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:id="@+id/nametext"
                    android:layout_weight="1.8"
                    android:gravity="top|bottom"
                    android:textSize="16sp"
                    android:textColor="#135b97"
                    android:layout_marginRight="10dp"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Type"

                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="roboto-light"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"

                    android:layout_weight="0.2"

                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:gravity="top|bottom"
                    android:layout_height="40dp"
                    android:id="@+id/typetext"
                    android:layout_weight="1.8"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:textColor="#135b97"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Descprition"

                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="roboto-light"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:id="@+id/descriptiontext"
                    android:layout_weight="1.8"
                    android:textSize="16sp"
                    android:textColor="#135b97"
                    android:gravity="top|bottom"
                    android:layout_marginRight="10dp"

                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Mobile No"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"

                    android:fontFamily="roboto-light"
                    android:id="@+id/OffenceType"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:textSize="20dp"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:id="@+id/mobilenotext"
                    android:layout_weight="1.8"
                    android:textColor="#135b97"
                    android:gravity="top|bottom"
                    android:layout_marginRight="10dp"
                    android:paddingRight="5dp"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Occupation"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="roboto-light"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"

                    android:layout_weight="0.2"

                    android:textSize="20dp"
                    android:id="@+id/textView4" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:id="@+id/occupationtext"
                    android:layout_weight="1.8"
                    android:textColor="#135b97"
                    android:textSize="16sp"
                    android:gravity="top|bottom"
                    android:layout_marginRight="10dp"

                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="roboto-light"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"

                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/addresstext"
                    android:gravity="top|bottom"
                    android:layout_weight="1.8"
                    android:textColor="#135b97"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>
    </LinearLayout>
</LinearLayout>
