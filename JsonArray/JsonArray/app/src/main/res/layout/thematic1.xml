<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:id="@+id/thematictotal">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From Date:"
                    android:fontFamily="roboto-light"
                    android:textSize="10sp"
                    android:textColor="#000"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/fromdatetext" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@drawable/calendar_icon"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/fromdateedit"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit"
                    android:drawablePadding="8dip"

                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="To Date:"

                    android:fontFamily="roboto-light"
                    android:layout_marginTop="6dp"
                    android:textSize="10dp"
                    android:textColor="#000"
                    android:id="@+id/todatetext"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/edit"
                    android:id="@+id/todateedit"
                    android:layout_marginTop="10dp"
                    android:drawableRight="@drawable/calendar_icon"
                    />
        </LinearLayout>
    </TableRow>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accident Type:"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:textSize="10dp"
            android:textColor="#000"
            android:fontFamily="roboto-light"
            android:id="@+id/OffenceType"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/Accedittypeedit"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/spinner"
            android:paddingRight="5dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textSize="10dp"
            android:textColor="#000"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="roboto-light"
            android:id="@+id/type" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/typeradio"
            android:paddingTop="4dp"
            android:layout_below="@+id/OffenceType"
            android:layout_toRightOf="@+id/type"
            android:layout_toEndOf="@+id/type">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Classification"
                android:id="@+id/classificationradio"
                android:fontFamily="roboto-light"
                android:paddingRight="10dp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/percentage"
                android:text="Percentage"
                android:fontFamily="roboto-light"

                />
        </RadioGroup>

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tablerow3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Classification:"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="8dp"
            android:textSize="10dp"
            android:textColor="#000"
            android:fontFamily="roboto-light"
            android:id="@+id/classification"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/classificationedit"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/spinner"


            android:paddingRight="5dp"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tablerow4"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Percentage:"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="8dp"
            android:textSize="10dp"
            android:textColor="#000"
            android:fontFamily="roboto-light"
            android:id="@+id/classification"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/classificationper"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/spinner"


            android:paddingRight="5dp"/>

    </TableRow>


</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="3"

        android:orientation="horizontal">
        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                    />
        <Button
            android:text="Search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:id="@+id/button2"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            />
        <Space
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center|right"
            android:layout_weight="0.5"
            android:src="@drawable/hide" />

    </LinearLayout>


</LinearLayout>



