<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OFFENDER FAMILY:"

            android:layout_marginLeft="8dp"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="7dp"
        android:padding="10dp"
        android:background="@drawable/edit1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Relation Type"

                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:fontFamily="roboto-light"
                   />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"

                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/offendernamespinner"
                    android:layout_weight="1.8"

                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:fontFamily="roboto-light"
                    android:text="Name"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"

                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/nameedit"
                    android:layout_weight="1.8"

                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit1"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Mobile No"

                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:fontFamily="roboto-light"
                 />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"

                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:maxLength="12"
                    android:id="@+id/mobilenoedit"
                    android:layout_weight="1.8"
                    android:inputType="number"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit1"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Address"

                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:fontFamily="roboto-light"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"

                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    />

                <EditText
                    android:id="@+id/addressedit"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.8"
                    android:background="@drawable/edit1"
                    android:gravity="top|left"
                    android:paddingRight="5dp" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Occupation"

                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:fontFamily="roboto-light"
                 />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"

                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    />

                <EditText
                    android:id="@+id/occupationedit"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:gravity="top|left"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.8"
                    android:background="@drawable/edit1"
                    android:paddingRight="5dp" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Any Proof"

                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:fontFamily="roboto-light"
                    android:id="@+id/OffenceType"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"

                    android:layout_weight="0.2"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/anyproofspinner"
                    android:layout_weight="1.8"

                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit1"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="3"

        android:orientation="horizontal">
        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:text="ADD NEW"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:id="@+id/addnew"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <ListView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/listprinting"
           ></ListView>

   </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="3"

        android:orientation="horizontal">
        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:text="Next"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:id="@+id/savebutton"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>
    </ScrollView>
    </RelativeLayout>
