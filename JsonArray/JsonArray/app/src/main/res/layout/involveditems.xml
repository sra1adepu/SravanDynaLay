<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/card_background"
    android:orientation="vertical">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Crime No"
                android:textColor="@color/colorAccent"


                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="12dp"
                android:layout_weight="1"

                android:fontFamily="roboto-light"
               />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center"

                android:layout_weight="0.2"

                android:textSize="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/crimenotext"
                android:layout_weight="1.8"
                android:textColor="#135b97"
              android:layout_marginTop="15dp"


                android:layout_marginRight="10dp"

                android:paddingRight="5dp"
                />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Police Station"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="12dp"
                android:layout_weight="1"

                android:fontFamily="roboto-light"
               />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center"

                android:layout_weight="0.2"
                android:layout_marginTop="6dp"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/policestationtext"
                android:layout_weight="1.8"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:layout_marginRight="10dp"
                android:textColor="#135b97"
                android:paddingRight="5dp"
                />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date Of Arrest"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="12dp"
                android:layout_weight="1"

                android:fontFamily="roboto-light"
                android:id="@+id/OffenceType"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center"

                android:layout_weight="0.2"
                android:layout_marginTop="6dp"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/dateofarresttext"
                android:layout_weight="1.8"
                android:textColor="#135b97"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"

                android:paddingRight="5dp"
                />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Status Of Crime"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="12dp"
                android:layout_weight="1"

                android:fontFamily="roboto-light"
                android:id="@+id/OffenceType"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center"

                android:layout_weight="0.2"
                android:layout_marginTop="6dp"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/statusofcrimetext"
                android:layout_weight="1.8"
                android:textColor="#135b97"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"

                android:paddingRight="5dp"
                />
        </LinearLayout>
    </TableRow>


</LinearLayout>
