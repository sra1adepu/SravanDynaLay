<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFFENDER:"
        android:layout_marginLeft="8dp"
        android:fontFamily="roboto-light"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/textView6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/card_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="INVOLVED CASES:"
            android:fontFamily="roboto-light"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"

                android:id="@+id/involvedcasestext"
                />
        </LinearLayout>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Crime No"

                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="roboto-light"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/crimenotext"
                    android:layout_weight="1.8"
                    android:textColor="#135b97"

                    android:gravity="top|bottom"

                    android:layout_marginRight="10dp"

                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Police Station"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="roboto-light"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"

                    android:layout_weight="0.2"

                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/policestationtext"
                    android:layout_weight="1.8"
                    android:layout_gravity="center"
                    android:gravity="top|bottom"
                    android:layout_marginRight="10dp"
                    android:textColor="#135b97"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date Of Arrest"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="roboto-light"
                    android:id="@+id/OffenceType"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"

                    android:layout_weight="0.2"

                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/dateofarresttext"
                    android:layout_weight="1.8"
                    android:textColor="#135b97"
                    android:gravity="top|bottom"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"

                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Status Of Crime"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="roboto-light"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/statusofcrimetext"
                    android:layout_weight="1.8"
                    android:textColor="#135b97"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="top|bottom"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>
        </TableRow>

    </LinearLayout>

</LinearLayout>
