<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/card_background"
    android:orientation="vertical">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Proof Type"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:fontFamily="roboto-light"
                android:id="@+id/OffenceType"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center"

                android:layout_weight="0.2"

                android:textSize="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/prooftypetext"
                android:layout_weight="1.8"
                android:textColor="#135b97"
                android:gravity="top|bottom"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:paddingRight="5dp"
                />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Proof Value"
                android:textColor="@color/colorAccent"

                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_weight="1"

                android:fontFamily="roboto-light"
               />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center"

                android:layout_weight="0.2"

                android:textSize="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/proofvaluetext"
                android:layout_weight="1.8"
                android:layout_gravity="center"
                android:gravity="top|bottom"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="#135b97"
                android:paddingRight="5dp"
                />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Proof Id Attachment"
                android:textColor="@color/colorAccent"

                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_weight="1"

                android:fontFamily="roboto-light"
               />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/proofidtext"
                android:visibility="gone"
                android:textColor="#135b97"
                android:gravity="top|bottom"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"

                android:paddingRight="5dp"
                />

            <ImageView
                android:id="@+id/image"
                android:layout_weight="1.8"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="80dp"/>
                </LinearLayout>
        </LinearLayout>
    </TableRow>




</LinearLayout>
